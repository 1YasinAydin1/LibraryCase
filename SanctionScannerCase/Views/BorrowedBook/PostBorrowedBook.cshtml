@*@using SanctionScannerCase.Application.Contracts.Books;*@
@model SanctionScannerCase.Application.Contracts.BorrowedBook.BorrowedBookDto
<div class="m-3">
    <div class="p-2 pl-4 mb-4  rounded" style="display:flex;flex-wrap:wrap;align-items:center;background-color:#14C38E">
        <div class="m-0 text-white" style="text-align:center;width:20%"><h5 class="m-0">Kitap Ödünç Verme Formu</h5></div>
        <div class="bg-white rounded ml-5" style="height:2px;width:70%"></div>
    </div>
    <hr />

    <form class="form-group row" method="post" enctype="multipart/form-data">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-12">
            @Html.Label("Kitap Id")
            @Html.TextBoxFor(c => c.BookId, new { @class = "form-control h-50 w-50", @readonly = "readonly" })
        </div>
        <div class="col-12">
            @Html.Label("Kitap Adı")
            @Html.TextBox("BookName", (String)TempData["BookName"], new { @class = "form-control", @readonly = "readonly"  })
            <div style="position:relative">
                <span style="position:absolute;right:20px">@Html.ValidationMessage("Name", new { @style = "color:red" })</span>
            </div>
        </div>
        <div class="col-6 py-3">
            @Html.Label("Ödünç Alacak Kişi Tc")
            @Html.TextBoxFor(c => c.BorrowerTc, new { @class = "form-control" })
            <div style="position:relative">
                <span style="position:absolute;right:20px">@Html.ValidationMessage("BorrowerTc", new { @style = "color:red" })</span>
            </div>
        </div>
        <div class="col-6 py-3">
            @Html.Label("Ödünç Alacak Kişi İsim Soyisim")
            @Html.TextBoxFor(c => c.BorrowerName, new { @class = "form-control" })
            <div style="position:relative">
                <span style="position:absolute;right:20px">@Html.ValidationMessage("BorrowerName", new { @style = "color:red" })</span>
            </div>
        </div>
        <div class="col-6">
            @Html.Label("Ödünç Tarihi")
            @Html.TextBox("BorrowDate", DateTime.Now.Date.ToString("yyyy-MM-dd"), new { @class = "form-control", @type = "date", @disabled = "disabled"  })
            <div style="position:relative">
                <span style="position:absolute;right:20px">@Html.ValidationMessage("BorrowDate", new { @style = "color:red" })</span>
            </div>
        </div>
        <div class="col-6">
            @Html.Label("Teslim Tarihi")
            @Html.TextBoxFor(c => c.ReturnDate, new { @class = "form-control", @type = "date" ,
            @min = DateTime.Now.Date.ToString("yyyy-MM-dd"),
            @max = DateTime.Now.AddMonths(1).Date.ToString("yyyy-MM-dd")})
            <div style="position:relative">
                <span style="position:absolute;right:20px">@Html.ValidationMessage("ReturnDate", new { @style = "color:red" })</span>
            </div>
        </div>

        <button class="mt-3 col-12 btn text-white" style="background-color:#14C38E">Ekle</button>
    </form>
</div>